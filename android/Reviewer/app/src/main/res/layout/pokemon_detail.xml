<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/AppTheme.NoActionBar" />

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="261dp"
            android:layout_height="342dp"
            android:layout_below="@id/toolbar"
            android:layout_alignBaseline="@id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@null"
            android:gravity="center"
            android:src="@drawable/pikachu" />

        <TextView
            android:id="@+id/pokemon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_alignBaseline="@id/item_image"
            android:textColor="#990E0E"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/item_image"
            android:padding="5dp"/>
         <TextView
            android:id="@+id/level_text"
            android:textColor="#050404"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignStart="@id/item_image"
            android:layout_below="@+id/pokemon_name"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/level"
            android:textColor="#050404"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pokemon_name"
            android:layout_toRightOf="@+id/level_text"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/hp_text"
            android:textColor="#990E0E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignStart="@id/item_image"
            android:layout_below="@+id/level_text"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/hp"
            android:textColor="#990E0E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level"
            android:layout_toRightOf="@+id/hp_text"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/atk_text"
            android:textColor="#0000FF"
            android:layout_alignStart="@id/item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hp_text"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/atk"
            android:textColor="#0000FF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hp"
            android:layout_toRightOf="@+id/atk_text"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/defense_text"
            android:textColor="#008000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/item_image"
            android:layout_below="@+id/atk_text"
            android:padding="5dp"/>

        <TextView android:id="@+id/defense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#008000"
            android:layout_below="@+id/atk"
            android:layout_toRightOf="@+id/defense_text"
            android:padding="5dp"/>

    </RelativeLayout>

