<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="rs.reviewer.activities.FightBossActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="rs.reviewer.activities.FightBossActivity">

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:background= "#00000000"/>


        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:gravity="center"
            android:text="@string/try_catch"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            android:layout_below="@id/btn_close"/>

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="261dp"
            android:layout_height="342dp"
            android:layout_below="@id/text"
            android:layout_alignBaseline="@id/text"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@null"
            android:gravity="center"
            android:src="@drawable/pikachu" />

        <TextView
            android:id="@+id/pokemon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_alignBaseline="@id/item_image"
            android:textColor="#990E0E"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/item_image"/>

        <TextView
            android:id="@+id/level_text"
            android:textColor="#050404"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignStart="@id/item_image"
            android:layout_below="@+id/pokemon_name"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/level"
            android:textColor="#050404"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pokemon_name"
            android:layout_toRightOf="@+id/level_text"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/hp_text"
            android:textColor="#990E0E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignStart="@id/item_image"
            android:layout_below="@+id/level_text"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/hp"
            android:textColor="#990E0E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level"
            android:layout_toRightOf="@+id/hp_text"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/atk_text"
            android:textColor="#0000FF"
            android:layout_alignStart="@id/item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hp_text"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/atk"
            android:textColor="#0000FF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hp"
            android:layout_toRightOf="@+id/atk_text"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/defense_text"
            android:textColor="#008000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/item_image"
            android:layout_below="@+id/atk_text"
            android:padding="5dp"/>

        <TextView android:id="@+id/defense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#008000"
            android:layout_below="@+id/atk"
            android:layout_toRightOf="@+id/defense_text"
            android:padding="5dp"/>

        <Button
            android:id="@+id/btn_choose_fighter"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/defense"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_width="261dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"

            />
    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
